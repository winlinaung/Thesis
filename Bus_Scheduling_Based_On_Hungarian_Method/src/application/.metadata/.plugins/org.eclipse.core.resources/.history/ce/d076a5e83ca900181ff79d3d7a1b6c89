import java.sql.Date;
import java.util.Calendar;

public class h1 {
public static void main(String args[]) {
	double p1 = 3.75;
	int p2 = (int) p1;
	double p3 = p1 - p2;
	System.out.println(p3);
	p3 = p3 * .6;
	System.out.println(p3);
	p1 = p2 + p3;
	System.out.println(p1);
	Date dt = new Date(p2);
	Calendar c = Calendar.getInstance(); 
	c.setTime(dt); 
	c.add(Calendar.DATE, 1);
	dt = (Date) c.getTime();
	System.out.println(dt);
}
}
